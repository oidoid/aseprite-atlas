#!/usr/bin/env -S deno --quiet run --allow-read --allow-run --allow-write --check=typescript
// aseprite-batch --sheet <filename.png> [OPTIONS] [FILES]

const process = Deno.run({
  cmd: [
    'aseprite',
    '--batch',
    ...Deno.args,
    // See TagFrameNumber.
    '--filename-format={tag}-{frame}',
    '--list-tags',
    '--list-slices',
    '--sheet-pack',
  ],
});

await process.status();
